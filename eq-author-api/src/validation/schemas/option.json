{
  "$id": "http://example.com/schemas/option.json",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "additionalAnswer": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "label": {
          "type": "string",
          "pattern": "\\w+",
          "errorMessage": "ADDITIONAL_LABEL_MISSING"
        },
        "properties": {
          "$ref": "answer.json#/definitions/properties"
        }
      },
      "required": ["id", "label"]
    }
  },
  "required": ["id"],
  "allOf": [
    {
      "if": {
        "properties": {
          "dynamicAnswer": { "const": true }
        }
      },
      "then": {
        "type": "object",
        "properties": {
          "dynamicAnswerID": {
            "$ref": "definitions.json#/definitions/populatedString"
          }
        }
      },
      "else": {
        "type": "object",
        "properties": {
          "label": {
            "$ref": "definitions.json#/definitions/populatedString"
          }
        },
        "required": ["label"]
      }
    }
  ]
}
