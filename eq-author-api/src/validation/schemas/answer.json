{
  "$id": "http://example.com/schemas/answer.json",
  "allOf": [
    {
      "$ref": "#/definitions/basicAnswer"
    },
    {
      "$ref": "#/definitions/checkboxAnswer"
    },
    {
      "$ref": "#/definitions/radioAnswer"
    },
    {
      "$ref": "#/definitions/numericAnswer"
    },
    {
      "$ref": "#/definitions/dateAnswer"
    },
    {
      "$ref": "#/definitions/dateRangeAnswer"
    }
  ],
  "definitions": {
    "basicAnswer": {
      "type": "object",
      "if": {
        "properties": {
          "type": {
            "not": {
              "enum": [
                "Checkbox",
                "Radio"
              ]
            }
          }
        }
      },
      "then": {
        "type": "object",
        "properties": {
          "qCode": {
            "$ref": "definitions.json#/definitions/populatedString"
          },
          "id": {
            "type": "string"
          },
          "label": {
            "$ref": "definitions.json#/definitions/populatedString"
          },
          "properties": {
            "$ref": "#/definitions/properties"
          }
        },
        "required": [
          "id",
          "label"
        ]
      }
    },
    "numericAnswer": {
      "if": {
        "properties": {
          "type": {
            "enum": [
              "Number",
              "Percentage",
              "Currency",
              "Unit"
            ]
          }
        }
      },
      "then": {
        "type": "object",
        "properties": {
          "qCode": {
            "$ref": "definitions.json#/definitions/populatedString"
          },
          "validation": {
            "if": {
              "allOf": [
                {
                  "properties": {
                    "minValue": {
                      "properties": {
                        "enabled": {
                          "const": true
                        },
                        "previousAnswer": {
                          "const": null
                        },
                        "custom": {
                          "not": {
                            "type": "null"
                          }
                        }
                      }
                    }
                  }
                },
                {
                  "properties": {
                    "maxValue": {
                      "properties": {
                        "enabled": {
                          "const": true
                        },
                        "previousAnswer": {
                          "const": null
                        },
                        "custom": {
                          "not": {
                            "type": "null"
                          }
                        }
                      }
                    }
                  }
                }
              ]
            },
            "then": {
              "properties": {
                "minValue": {
                  "type": "object",
                  "properties": {
                    "custom": {
                      "maximum": {
                        "$data": "2/maxValue/custom"
                      },
                      "errorMessage": "ERR_MIN_LARGER_THAN_MAX"
                    }
                  }
                },
                "maxValue": {
                  "type": "object",
                  "properties": {
                    "custom": {}
                  }
                }
              }
            },
            "properties": {
              "minValue": {
                "anyOf": [
                  {
                    "type": "object",
                    "properties": {
                      "enabled": {
                        "const": true
                      },
                      "entityType": {
                        "const": "Custom"
                      },
                      "custom": {
                        "not": {
                          "type": "null"
                        }
                      }
                    }
                  },
                  {
                    "type": "object",
                    "properties": {
                      "enabled": {
                        "const": true
                      },
                      "entityType": {
                        "const": "PreviousAnswer"
                      },
                      "previousAnswer": {
                        "not": {
                          "type": "null"
                        }
                      }
                    }
                  },
                  {
                    "type": "object",
                    "properties": {
                      "enabled": {
                        "const": false
                      }
                    }
                  }
                ],
                "errorMessage": "ERR_NO_VALUE"
              },
              "maxValue": {
                "anyOf": [
                  {
                    "type": "object",
                    "properties": {
                      "enabled": {
                        "const": true
                      },
                      "custom": {
                        "not": {
                          "type": "null"
                        }
                      }
                    }
                  },
                  {
                    "type": "object",
                    "properties": {
                      "enabled": {
                        "const": true
                      },
                      "entityType": {
                        "const": "PreviousAnswer"
                      },
                      "previousAnswer": {
                        "not": {
                          "type": "null"
                        }
                      }
                    }
                  },
                  {
                    "type": "object",
                    "properties": {
                      "enabled": {
                        "const": false
                      }
                    }
                  }
                ],
                "errorMessage": "ERR_NO_VALUE"
              }
            }
          },
          "properties": {
            "$ref": "#/definitions/properties"
          }
        }
      },
      "else": false
    },
    "checkboxAnswer": {
      "if": {
        "properties": {
          "type": {
            "enum": [
              "Checkbox"
            ]
          }
        }
      },
      "then": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "options": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "qCode": {
                  "$ref": "definitions.json#/definitions/populatedString"
                }
              },
              "required": [
                "qCode"
              ],
              "errorMessage": {
                "required": {
                  "qCode": "ERR_QCODE_REQUIRED"
                }
              },
              "allOf": [
                {
                  "$ref": "option.json"
                },
                {
                  "uniquePropertyValueInArrayOfObjects": "label"
                }
              ]
            }
          },
          "mutuallyExclusiveOption": {
            "$ref": "option.json"
          }
        },
        "required": [
          "id",
          "options"
        ]
      },
      "else": false
    },
    "radioAnswer": {
      "if": {
        "properties": {
          "type": {
            "enum": [
              "Radio"
            ]
          }
        }
      },
      "then": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "qCode": {
            "$ref": "definitions.json#/definitions/populatedString"
          },
          "options": {
            "type": "array",
            "items": {
              "allOf": [
                {
                  "$ref": "option.json"
                },
                {
                  "uniquePropertyValueInArrayOfObjects": "label"
                }
              ]
            }
          },
          "mutuallyExclusiveOption": {
            "$ref": "option.json"
          }
        },
        "required": [
          "id",
          "options",
          "qCode"
        ],
        "errorMessage": {
          "required": {
            "qCode": "ERR_QCODE_REQUIRED"
          }
        }
      },
      "else": false
    },
    "dateAnswer": {
      "if": {
        "properties": {
          "type": {
            "enum": [
              "Date"
            ]
          }
        }
      },
      "then": {
        "type": "object",
        "properties": {
          "qCode": {
            "$ref": "definitions.json#/definitions/populatedString"
          },
          "validation": {
            "if": {
              "allOf": [
                {
                  "properties": {
                    "earliestDate": {
                      "properties": {
                        "enabled": {
                          "const": true
                        },
                        "entityType": {
                          "enum": [
                            "Custom",
                            "Metadata"
                          ]
                        }
                      }
                    }
                  }
                },
                {
                  "properties": {
                    "latestDate": {
                      "properties": {
                        "enabled": {
                          "const": true
                        },
                        "entityType": {
                          "enum": [
                            "Custom",
                            "Metadata"
                          ]
                        }
                      }
                    }
                  }
                }
              ]
            },
            "then": {
              "properties": {
                "earliestDate": {
                  "type": "object",
                  "properties": {
                    "custom": {
                      "validateLatestAfterEarliest": {
                        "$data": "2/latestDate"
                      }
                    }
                  }
                }
              }
            },
            "properties": {
              "earliestDate": {
                "anyOf": [
                  {
                    "type": "object",
                    "properties": {
                      "enabled": {
                        "const": true
                      },
                      "value": {
                        "not": {
                          "type": "null"
                        }
                      },
                      "offset": {
                        "properties": {
                          "value": {
                            "not": {
                              "type": "null"
                            }
                          }
                        }
                      }
                    }
                  },
                  {
                    "type": "object",
                    "properties": {
                      "enabled": {
                        "const": false
                      }
                    }
                  }
                ],
                "errorMessage": "ERR_NO_VALUE"
              },
              "latestDate": {
                "anyOf": [
                  {
                    "type": "object",
                    "properties": {
                      "enabled": {
                        "const": true
                      },
                      "value": {
                        "not": {
                          "type": "null"
                        }
                      },
                      "offset": {
                        "properties": {
                          "value": {
                            "not": {
                              "type": "null"
                            }
                          }
                        }
                      }
                    }
                  },
                  {
                    "type": "object",
                    "properties": {
                      "enabled": {
                        "const": false
                      }
                    }
                  }
                ],
                "errorMessage": "ERR_NO_VALUE"
              }
            }
          },
          "properties": {
            "$ref": "#/definitions/properties"
          }
        }
      }
    },
    "dateRangeAnswer": {
      "if": {
        "properties": {
          "type": {
            "enum": [
              "DateRange"
            ]
          }
        }
      },
      "then": {
        "type": "object",
        "properties": {
          "qCode": {
            "$ref": "definitions.json#/definitions/populatedString"
          },
          "secondaryQCode": {
            "$ref": "definitions.json#/definitions/populatedString"
          },
          "secondaryLabel": {
            "$ref": "definitions.json#/definitions/populatedString"
          },
          "validation": {
            "allOf": [
              {
                "if": {
                  "allOf": [
                    {
                      "properties": {
                        "minDuration": {
                          "properties": {
                            "enabled": {
                              "const": true
                            }
                          }
                        }
                      }
                    },
                    {
                      "properties": {
                        "maxDuration": {
                          "properties": {
                            "enabled": {
                              "const": true
                            }
                          }
                        }
                      }
                    }
                  ]
                },
                "then": {
                  "properties": {
                    "minDuration": {
                      "type": "object",
                      "properties": {
                        "duration": {
                          "validateDuration": {
                            "$data": "2/maxDuration"
                          }
                        }
                      }
                    },
                    "maxDuration": {
                      "type": "object",
                      "properties": {
                        "duration": {}
                      }
                    }
                  }
                }
              },
              {
                "if": {
                  "allOf": [
                    {
                      "properties": {
                        "earliestDate": {
                          "properties": {
                            "enabled": {
                              "const": true
                            }
                          }
                        }
                      }
                    },
                    {
                      "properties": {
                        "latestDate": {
                          "properties": {
                            "enabled": {
                              "const": true
                            }
                          }
                        }
                      }
                    }
                  ]
                },
                "then": {
                  "properties": {
                    "earliestDate": {
                      "type": "object",
                      "properties": {
                        "custom": {
                          "validateLatestAfterEarliest": {
                            "$data": "2/latestDate"
                          }
                        }
                      }
                    }
                  }
                }
              }
            ],
            "properties": {
              "earliestDate": {
                "anyOf": [
                  {
                    "type": "object",
                    "properties": {
                      "enabled": {
                        "const": true
                      },
                      "value": {
                        "not": {
                          "type": "null"
                        }
                      },
                      "offset": {
                        "properties": {
                          "value": {
                            "not": {
                              "type": "null"
                            }
                          }
                        }
                      }
                    }
                  },
                  {
                    "type": "object",
                    "properties": {
                      "enabled": {
                        "const": false
                      }
                    }
                  }
                ],
                "errorMessage": "ERR_NO_VALUE"
              },
              "latestDate": {
                "anyOf": [
                  {
                    "type": "object",
                    "properties": {
                      "enabled": {
                        "const": true
                      },
                      "value": {
                        "not": {
                          "type": "null"
                        }
                      },
                      "offset": {
                        "properties": {
                          "value": {
                            "not": {
                              "type": "null"
                            }
                          }
                        }
                      }
                    }
                  },
                  {
                    "type": "object",
                    "properties": {
                      "enabled": {
                        "const": false
                      }
                    }
                  }
                ],
                "errorMessage": "ERR_NO_VALUE"
              },
              "minDuration": {
                "anyOf": [
                  {
                    "type": "object",
                    "properties": {
                      "enabled": {
                        "const": true
                      },
                      "value": {
                        "not": {
                          "type": "null"
                        }
                      },
                      "duration": {
                        "properties": {
                          "value": {
                            "not": {
                              "type": "null"
                            }
                          }
                        }
                      }
                    }
                  },
                  {
                    "type": "object",
                    "properties": {
                      "enabled": {
                        "const": false
                      }
                    }
                  }
                ],
                "errorMessage": "ERR_NO_VALUE"
              },
              "maxDuration": {
                "anyOf": [
                  {
                    "type": "object",
                    "properties": {
                      "enabled": {
                        "const": true
                      },
                      "value": {
                        "not": {
                          "type": "null"
                        }
                      },
                      "duration": {
                        "properties": {
                          "value": {
                            "not": {
                              "type": "null"
                            }
                          }
                        }
                      }
                    }
                  },
                  {
                    "type": "object",
                    "properties": {
                      "enabled": {
                        "const": false
                      }
                    }
                  }
                ],
                "errorMessage": "ERR_NO_VALUE"
              }
            }
          },
          "properties": {
            "$ref": "#/definitions/properties"
          }
        },
        "required": [
          "qCode",
          "secondaryQCode"
        ],
        "errorMessage": {
          "required": {
            "qCode": "ERR_QCODE_REQUIRED",
            "secondaryQCode": "ERR_SECONDARY_QCODE_REQUIRED"
          }
        }
      }
    },
    "properties": {
      "type": "object",
      "properties": {
        "decimals": {
          "linkedDecimalValidation": {
            "$data": "/sections"
          }
        },
        "maxLength": {
          "type": "string",
          "textLengthInRange": "maxLength"
        },
        "unit": {
          "$ref": "definitions.json#/definitions/populatedString"
        }
      }
    }
  }
}
