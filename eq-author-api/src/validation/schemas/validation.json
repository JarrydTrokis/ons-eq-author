{
  "$id": "http://example.com/schemas/validation.json",
  "definitions": {
    "totalValidation": {
      "if": {
        "type": "object",
        "properties": {
          "enabled": { "const": true }
        }
      },
      "then": {
        "allOf": [
          {
            "if": {
              "properties": { "entityType": { "const": "Custom" } }
            },
            "then": {
              "properties": { "custom": { "type": "number" } },
              "errorMessage": "ERR_TOTAL_NO_VALUE"
            }
          },
          {
            "if": {
              "properties": { "entityType": { "const": "PreviousAnswer" } }
            },
            "then": {
              "if": {
                "properties": { "previousAnswer": { "type": "string" } }
              },
              "then": {
                "if": {
                  "idExists": {
                    "$data": "0/previousAnswer"
                  }
                },
                "then": {
                  "idPreceedsCurrentEntity": {
                    "$data": "0/previousAnswer"
                  },
                  "errorMessage": "ERR_REFERENCE_MOVED"
                },
                "else": {
                  "failValidation": true,
                  "errorMessage": "ERR_REFERENCE_DELETED"
                }
              },
              "else": {
                "failValidation": true,
                "errorMessage": "ERR_TOTAL_NO_VALUE"
              }
            }
          }
        ]
      }
    },
    "numericValidations": {
      "if": {
        "properties": {
          "minValue": {
            "properties": {
              "enabled": {
                "const": true
              },
              "entityType": { "const": "Custom" },
              "custom": {
                "not": { "type": "null" }
              }
            }
          },
          "maxValue": {
            "properties": {
              "enabled": {
                "const": true
              },
              "entityType": { "const": "Custom" },
              "custom": {
                "not": { "type": "null" }
              }
            }
          }
        }
      },
      "then": {
        "properties": {
          "minValue": {
            "type": "object",
            "properties": {
              "custom": {
                "maximum": {
                  "$data": "2/maxValue/custom"
                },
                "errorMessage": "ERR_MIN_LARGER_THAN_MAX"
              }
            }
          }
        }
      },
      "properties": {
        "minValue": {
          "$ref": "#/definitions/validationEntry"
        },
        "maxValue": {
          "$ref": "#/definitions/validationEntry"
        }
      }
    },
    "validationEntry": {
      "type": "object",
      "anyOf": [
        {
          "properties": {
            "enabled": {
              "const": true
            },
            "entityType": {
              "const": "Custom"
            },
            "custom": {
              "not": { "type": "null" }
            }
          }
        },
        {
          "properties": {
            "enabled": {
              "const": true
            },
            "entityType": {
              "const": "PreviousAnswer"
            },
            "previousAnswer": {
              "not": { "type": "null" }
            }
          }
        },
        {
          "properties": {
            "enabled": {
              "const": false
            }
          }
        }
      ],
      "errorMessage": "ERR_NO_VALUE"
    }
  }
}
