{
  "$id": "http://example.com/schemas/validation.json",
  "definitions": {
    "totalValidation": {
      "if": {
        "type": "object",
        "properties": {
          "enabled": { "const": true }
        }
      },
      "then": {
        "allOf": [
          {
            "if": {
              "properties": { "entityType": { "const": "Custom" } }
            },
            "then": {
              "properties": { "custom": { "type": "number" } },
              "errorMessage": "ERR_TOTAL_NO_VALUE"
            }
          },
          {
            "if": {
              "properties": { "entityType": { "const": "PreviousAnswer" } }
            },
            "then": {
              "if": {
                "properties": { "previousAnswer": { "type": "string" } }
              },
              "then": {
                "if": {
                  "idExists": {
                    "$data": "0/previousAnswer"
                  }
                },
                "then": {
                  "idPreceedsCurrentEntity": {
                    "$data": "0/previousAnswer"
                  },
                  "errorMessage": "ERR_REFERENCE_MOVED"
                },
                "else": {
                  "failValidation": true,
                  "errorMessage": "ERR_REFERENCE_DELETED"
                }
              },
              "else": {
                "failValidation": true,
                "errorMessage": "ERR_TOTAL_NO_VALUE"
              }
            }
          }
        ]
      }
    },
    "numericValidations": {
      "if": {
        "properties": {
          "minValue": {
            "properties": {
              "enabled": {
                "const": true
              },
              "entityType": { "const": "Custom" },
              "custom": {
                "not": { "type": "null" }
              }
            }
          },
          "maxValue": {
            "properties": {
              "enabled": {
                "const": true
              },
              "entityType": { "const": "Custom" },
              "custom": {
                "not": { "type": "null" }
              }
            }
          }
        }
      },
      "then": {
        "properties": {
          "minValue": {
            "type": "object",
            "properties": {
              "custom": {
                "maximum": {
                  "$data": "2/maxValue/custom"
                },
                "errorMessage": "ERR_MIN_LARGER_THAN_MAX"
              }
            }
          }
        }
      },
      "properties": {
        "minValue": { "$ref": "#/definitions/validationEntry" },
        "maxValue": { "$ref": "#/definitions/validationEntry" }
      }
    },
    "dateValidations": {
      "type": "object",
      "properties": {
        "earliestDate": { "$ref": "#/definitions/dateValidationEntry" },
        "latestDate": { "$ref": "#/definitions/dateValidationEntry" }
      },
      "if": {
        "properties": {
          "earliestDate": {
            "properties": {
              "enabled": { "const": true },
              "entityType": {
                "enum": ["Custom", "Metadata"]
              }
            }
          },
          "latestDate": {
            "properties": {
              "enabled": { "const": true },
              "entityType": {
                "enum": ["Custom", "Metadata"]
              }
            }
          }
        }
      },
      "then": {
        "properties": {
          "earliestDate": {
            "type": "object",
            "properties": {
              "custom": {
                "validateLatestAfterEarliest": {
                  "$data": "2/latestDate"
                }
              }
            }
          }
        }
      }
    },
    "dateValidationEntry": {
      "type": "object",
      "if": {
        "properties": {
          "enabled": { "const": true }
        }
      },
      "then": {
        "allOf": [
          {
            "properties": {
              "offset": {
                "type": "object",
                "properties": {
                  "value": { "not": { "type": "null" } }
                }
              }
            },
            "errorMessage": "ERR_OFFSET_NO_VALUE"
          },
          {
            "$ref": "#/definitions/validationEntry"
          }
        ]
      }
    },
    "dateRangeValidations": {
      "type": "object",
      "allOf": [
        {
          "if": {
            "properties": {
              "minDuration": {
                "properties": {
                  "enabled": { "const": true }
                }
              },
              "maxDuration": {
                "properties": {
                  "enabled": { "const": true }
                }
              }
            }
          },
          "then": {
            "properties": {
              "minDuration": {
                "type": "object",
                "properties": {
                  "duration": {
                    "validateDuration": {
                      "$data": "2/maxDuration"
                    }
                  }
                }
              }
            }
          }
        },
        {
          "$ref": "#/definitions/dateValidations"
        }
      ],
      "properties": {
        "minDuration": { "$ref": "#/definitions/validationEntry" },
        "maxDuration": { "$ref": "#/definitions/validationEntry" }
      }
    },
    "validationEntry": {
      "type": "object",
      "anyOf": [
        {
          "properties": {
            "enabled": { "const": false }
          }
        },
        {
          "properties": {
            "enabled": { "const": true },
            "entityType": { "const": "Custom" },
            "custom": {
              "not": { "type": "null" }
            }
          }
        },
        {
          "properties": {
            "enabled": { "const": true },
            "entityType": { "const": "Custom" },
            "duration": {
              "type": "object",
              "properties": {
                "value": { "not": { "type": "null" } }
              }
            }
          }
        },
        {
          "properties": {
            "enabled": { "const": true },
            "entityType": { "const": "Now" }
          }
        },
        {
          "properties": {
            "enabled": { "const": true },
            "entityType": {
              "const": "PreviousAnswer"
            },
            "previousAnswer": {
              "not": { "type": "null" }
            }
          }
        },
        {
          "properties": {
            "enabled": { "const": true },
            "entityType": { "const": "Metadata" },
            "metadata": {
              "not": { "type": "null" }
            }
          }
        }
      ],
      "errorMessage": "ERR_NO_VALUE"
    }
  }
}
